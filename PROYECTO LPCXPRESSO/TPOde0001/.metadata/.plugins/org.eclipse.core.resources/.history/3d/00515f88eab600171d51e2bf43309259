#include "Aplicacion.h"

/**
 * \fn void TIMER0_IRQHandler (void)
 * \brief ISR de timer0
 * \details Limpia flag y guarda captura Ch0 para ser usada en otra parte del programa
 * \author GOS
 * \date   2014.05.06
 * \param [in] void
 * \return void
 * */
extern uint8_t bufferwav[1024];
extern uint32_t cant;


void TIMER0_IRQHandler (void)
{
	uint8_t prueba []={25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87,25,158,54,68,98,45,128,54,65,1,7,64,55,45,87};
	static uint32_t i=0;
	uint16_t sample;

	if(T0IR & MR0)
	{
		// Si interrumpio match 0
		T0IR |= MR0;

		Write_Dac(prueba[i]);
		i++;
	//	printf ("%d\n",bufferwav[i]);
		i%=sizeof(prueba);

	}
}


