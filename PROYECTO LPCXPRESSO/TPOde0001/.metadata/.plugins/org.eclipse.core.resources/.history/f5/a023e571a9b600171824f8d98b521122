//void SysTick_Handler ( void );
//extern volatile uint8_t led;
#define DECIMAS		10		//la cuenta es para ticks de 10ms.
#define SEGUNDOS	10
#define TRES		3
#define CINCO		5

extern volatile uint8_t flagIntExt;

void SysTick_Handler(void)
{
	static volatile uint8_t decimas  	= DECIMAS;
	static volatile uint8_t segundos 	= SEGUNDOS;
	static volatile uint8_t tresSeg 	= TRES;
	static volatile uint8_t cincoSeg 	= CINCO;

	DriverTeclado();

}
